extends layout
block content

  if title
    
    table#articles 
      tr
        th.key Title
          td #{title}
      tr
        th.key Summary
          td #{summary} 

    
    
    h2= title 
    p UrlName: #{urlname}  
    p SR: #{sr}
   
    p Summary: #{summary} 
    p Status: #{ps} 
    p Details: !{details}

  else
    p No records found
  a(href="/search.html") Search again