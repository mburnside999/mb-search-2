extends layout
block content

  table#articles 
    thead
      tr
        th Article Number 
        th Type
        th Title 
        th Summary
        th Status
        th View
    tbody    
      each article in sr
        tr
          td #{article.ArticleNumber}
          td #{article.Type}
          td #{article.Title}
          td #{article.Summary}
          td #{article.PublishStatus}
          td 
            a(href="/kb/article/#{article.Id}") Link
   
  
  br
  br
  a(href="/search.html") Search again